<form class="connection validate-form" action="connection_confirm">
  <div class="form-group">
    <input type="text" class="form-control required js_pass_val" placeholder="手机号/邮箱">
  </div>
  <div class="form-group">
    <input type="password" class="form-control required js_pass_val" placeholder="密码">
  </div>
  <button type="submit" class="btn btn-block btn-default-outline">关联</button>
  <div class="text-right">
    <%= link_to "忘记密码？", find_accounts_path %>
  </div>
</form>
