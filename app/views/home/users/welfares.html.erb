<div class="container welfares">
  <div class="row row-10">
    <div class="col-sm-3">
      <%= render "panel" %>
    </div>
    <div class="col-sm-9">
      <ul class="head-highline list-unstyled">
        <li class="item <%= 'active' unless %w(event product letter voice).include?(params[:type].to_s) %>"><a href="<%= welfares_home_users_path %>">全部</a></li>
        <li class="item <%= 'active' if params[:type] == 'event' %>"><%= link_to "活动福利", welfares_home_users_path(type: 'event')%></li>
        <li class="item <%= 'active' if params[:type] == 'product' %>"><%= link_to "商品福利", welfares_home_users_path(type: 'product')%></li>
        <li class="item <%= 'active' if params[:type] == 'letter' %>"><%= link_to "图片福利", welfares_home_users_path(type: 'letter')%></li>
        <li class="item <%= 'active' if params[:type] == 'voice' %>"><%= link_to "语音福利", welfares_home_users_path(type: 'voice')%></li>
      </ul>
      <div class="list">
        <div class="row row-10">
          <% if @expens.blank? %>
            <div class="null-content">
              <div class="text-center translate-middle-y">
                <p>
                  <%= image_tag 'home/null-content.png', alt: '' %>
                </p>
                <p>您还没有打开过福利喔！快去参加吧!</p>
                <%= link_to "去首页看看", "/", class: "btn btn-sm btn-default" %>
              </div>
            </div>
          <% else %>
            <% @expens.each do |expen| %>
              <div class="col-sm-6 col-md-4">
                <%= render partial: 'shop/shared/task_card', locals: {task: expen.task} %>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="text-center">
          <%= will_paginate(@expens) %>
        </div>
      </div>
    </div>
  </div>
</div>
