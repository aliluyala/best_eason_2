<!-- 绑定手机号码 -->
<% if @current_account.phone.present? %>
  <div class="container">
    <div class="row row-10">
      <div class="col-sm-3">
        <%= render "home/users/panel" %>
      </div>
      <div class="col-sm-9">
        <div class="head-highline">
          <a href="javascript:;" class="item">手机号码绑定</a>
        </div>
        <div class="block-area form-inline">
          <label for="phone_number" class="control-label">已绑定手机号</label>
          <input type="tel" name='phone' class="form-control jqphone js_pass_val" id="phone_number" placeholder="<%= @current_account.phone %>" required="required" disabled="disabled">
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="row row-10">
      <div class="col-sm-3">
        <%= render "home/users/panel" %>
      </div>
      <div class="col-sm-9">
        <div class="head-highline">
          <a href="javascript:;" class="item">手机号码绑定</a>
        </div>
        <form action="<%= update_phone_account_path(@current_account) %>" method='put' class="form-horizontal block-area js-checkPhoneForm">
          <div class="form-group">
            <label for="phone_number" class="col-md-2 control-label">手机号</label>
            <div class="col-md-5">
              <input type="tel" name='phone' class="form-control jqphone js_pass_val" id="phone_number" placeholder="" required="required">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-2 control-label" for="jqcaptcha">验证码  </label>
            <div class="col-md-10">
              <%= rucaptcha_input_tag(class: 'form-control pull-left jqcaptcha js_pass_val', placeholder: '图片验证码', style: "width:48%") %>
              <%= rucaptcha_image_tag(class: 'pull-left captcha_image', id: 'captcha_image_phone') %>
              <a href="#" id="captcha_refresh_phone" title="换一换">换一换</a>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
              <div class="small text-gray" style="margin-bottom: 4px;">请输入您收到的短信验证码</div>
              <div class="input-group">
                <input type="text" name='captcha' class="form-control jqcaptchafree js_pass_val" >
                <a class="btn btn-default btn-block btn-u input-group-addon message" >获取验证码</a>
              </div>
              <div class="form-group js_accounts_voice hide text-highlight-r">
                没有收到短信验证码？您可以尝试重新发送或使用<a href="#" class="text-primary js_accounts_voice_btn">语音验证码</a>
              </div>
            </div>
          </div>
          <% if @current_account.email.blank? && @current_account.phone.blank?%>
          <div class="form-group">
            <label for="passoAuthur" class="col-md-2 control-label">密码</label>
            <div class="col-md-5">
              <input type="password" name='password' class="form-control js_pass_val" id="passoAuthur" placeholder="" required="required">
            </div>
          </div>
          <div class="form-group">
            <label for="confirmPassoAuthur" class="col-md-2 control-label">确认密码</label>
            <div class="col-md-5">
              <input type="password" name='password_confirmation' class="form-control js_pass_val" id="confirmPassoAuthur" placeholder="" required="required">
            </div>
          </div>
          <% end %>
          <div class="form-group">
            <hr>
            <div class="col-md-offset-2 col-sm-10">
              <a class="btn btn-highlight-outline space-lg-hor js-checkPhone">完成</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
<% end %>
