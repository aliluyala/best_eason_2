<div class="container">
  <ol class="breadcrumb">
    <li><a href="/">首页</a></li>
    <li class="active">应援榜</li>
  </ol>

  <div class="list rankings-list">
    <!-- 明星 -->
    <div class="row row-10">
    <% @stars.each_with_index do |star, i| %>
      <div class="col-sm-6 col-md-3">
        <div class="tag-box text-center">
          <% if params[:page].to_i < 2 %>
            <div class="rank-no ellipsis <%= 'rank-no-highlight' if i < 3 %>">
              <i class="icons">&#xe649;</i>&nbsp;<%= star.participants %>
            </div>
          <% end %>
          <!-- 头像 -->
          <%= link_to (image_tag star.picture_url.to_s + "?imageMogr2/auto-orient/thumbnail/!50x50r/gravity/Center/crop/50x50", class: 'img-circle', alt: ''), home_star_path(star), class: 'avatar-round' %>

          <div class="limit-height">
            <div class="h4 ellipsis">
              <%= link_to star.name, home_star_path(star) %>
              <i class="icons v-icon v-star">&#xe609;</i>
            </div>
            <p class="text-gray ellipsis">
              粉丝：<%= star.fans_total %>
            </p>
            <p class="text-gray ellipsis"><%= star.sign %></p>
          </div>
          <label class="checkbox-stars" for="">
            <%= follow_links(star) %>
          </label>
        </div>
      </div>
    <% end %>
    </div>
    <div class="text-center">
      <%= will_paginate(@stars) %>
    </div>
  </div>
</div>
