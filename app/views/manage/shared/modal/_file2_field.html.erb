
<% field_class = {class: 'form-control'}.merge!(f.options[:options_class]) %>

<fieldset>
  <div class="form-group row">
    <%= f.label field, class: 'col-md-1 control-label' do -%>
      <%= raw('<sup>*</sup>') if defined?(required) && required %>
      <%= model.human_attribute_name(field) %>
    <% end -%>

    <div class="col-md-11">
      <% field_class.merge!(required: true) if defined?(required) && required %>
      <% if picture_url.present? %>
				<%= link_to (image_tag picture_url, width: image[:width], height: image[:height], alt: ""), picture_url, target: '_blank' %>
			<% end %>

      <div class="js-tagbox">
        <div class="">
          <%= f.hidden_field field, label: false, placeholder: '上传图片', class: "js-name form-control js-checkName #{'file_required' if defined?(required) && required} " %>
          <p class="js-textError text-highlight-r"></p>
          <div class="form-control js-photobtn1">上传图片</div>
        </div>
        <div class="js-upload-photo-1 hide">
          <div class="thumb-img-add topics-btn js-upload-photoadd-1"></div>
        </div>
      </div>

      <% if defined?(p_field) && p_field %>
        <p class="help-block">
          <%= p_field %>
        </p>
      <% else %>
        <p class="help-block">
          支持jpg/jpeg/gif/png格式,大小&lt;2M,建议上传640*480px
        </p>
      <% end %>
      
    </div>
  </div>
</fieldset>
