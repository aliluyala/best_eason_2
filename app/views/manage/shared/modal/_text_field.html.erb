<% field_class = {class: "form-control js_danger_chara #{ options[:options_class] if defined?(options) && options }"}.merge!(f.options[:options_class]) %>

<fieldset>
  <div class="form-group row">
    <%= f.label field, class: 'col-md-1 control-label' do -%>
      <%= raw('<sup>*</sup>') if defined?(required) && required %>
      <%= model.human_attribute_name(field) %>
    <% end -%>

    <div class="col-md-11">
      <% field_class.merge!(required: true) if defined?(required) && required %>
      <% field_class.merge!(type: 'number') if defined?(number) && number %>
      <% field_class.merge!(maxlength: maxlength) if defined?(maxlength) && maxlength %>
      <% field_class.merge!(placeholder: placeholder) if defined?(placeholder) && placeholder %>
      <% field_class.merge!(max: max) if defined?(max) && max %>
      <%= f.text_field field, field_class %>
      <% if defined?(p_field) && p_field %>
        <p class="help-block">
          <%= p_field %>
        </p>
      <% end %>
    </div>
  </div>
</fieldset>
