<div class="publish-form">
  <div class="form-group">
    <label class="">选取信纸 <span class="text-highlight-r">*</span></label>

    <div class="row envelope-opts">
      <% Welfare::Paper.active.published.each do |paper| %>
      <div class="col-xs-6 col-md-4">
        <div class="envelope-item">
          <div class="envelope-thumb">
            <%= image_tag paper.picture_url, alt: '', class: '' %>
          </div>
          <label class="input-group-addon">
            <%= f.radio_button :paper_id, nil, class: 'set-cover' %>
            <%= image_tag "home/letters/letter-checked.png", alt: "", class: "envelope-checked" %>
          </label>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <button type="button" class="btn btn-danger btn-lg space-lg-hor" date-step-button="next">下一步</button>
  </div>
</div>
