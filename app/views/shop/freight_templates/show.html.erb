<div class="container m-container">
  <div class="row row-10">
    <div class="col-sm-3">
      <%= render "home/users/panel" %>
    </div>
    <div class="col-sm-9">
      <ol class="breadcrumb">
        <li><a href="<%= shop_freight_templates_path %>">运费模版</a></li>
        <li class="active"><%= @template.name %></li>
      </ol>
      <%= simple_form_for @template, url: shop_event_path, method: :put, html: { class: "publish-form validate-form js-checkForm" } do |f| %>
        <div class="form-group">
          <label class="">名称 <span class="text-highlight-r">*</span></label>
          <%= f.input :name, label: false, placeholder: '请勿包含 ＃＊<> & % ^‘等字符', as: :text, class: "form-control", input_html: { rows: "1" } %>
        </div>
        <div class="form-group">
          <label class="">首发地 <span class="text-highlight-r">*</span></label>
          <%= f.input :start_position, label: false, placeholder: '填写活动详细的描述信息上半部分', as: :text, class: "form-control", input_html: { rows: "1" } %>
        </div>
        <fieldset class="form-group well well-sm">
          <div id="freights">
            <%= f.simple_fields_for :freights do |info| %>
              <%= render 'freight_fields', {f: info, action: 'show' } %>
            <% end %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>
